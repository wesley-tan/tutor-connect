{
  "name": "@tutorconnect/api",
  "version": "1.0.0",
  "description": "TutorConnect API Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "cd ../../packages/database && npm run generate",
    "db:migrate": "cd ../../packages/database && npm run migrate",
    "db:seed": "cd ../../packages/database && npm run seed",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tutorconnect/database": "file:../../packages/database",
    "@prisma/client": "^5.4.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "stripe": "^13.6.0",
    "axios": "^1.5.0",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4",
    "winston": "^3.10.0",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 